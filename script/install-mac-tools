#!/usr/bin/env sh

if [ -x "$(command -v brew)" ]
then
  echo "already installed: brew"
else
  echo "    installing: brew"

  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

function brewinstall () {
  if [ -x "$(command -v $1)" ]
  then
    echo "already installed: $1"
  else
    echo "    installing: $1"
    brew install $1
  fi
}

brewinstall "jq"
brewinstall "jless"
brewinstall "wget"
brewinstall "tree"
